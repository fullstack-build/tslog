{
  "name": "tslog",
  "version": "0.2.0",
  "description": "TypeScript and JavaScript Logger",
  "main": "index",
  "typings": "src/index",
  "scripts": {
    "build": "tsc",
    "eslint": "eslint . --ext .ts",
    "eslint-fix": "eslint . --ext .ts --fix",
    "test": "ava",
    "coverage": "nyc --all ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fullstack-build/soniq.git"
  },
  "authors": [
    "Eugene Terehov <eugene@fullstack.build>",
    "Dustin Hoffner <dustin@fullstack.build>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fullstack-build/soniq/issues"
  },
  "homepage": "https://www.fullstack.one",
  "devDependencies": {
    "@rushstack/eslint-config": "^0.5.7",
    "@types/lodash": "~4.14.149",
    "@types/node": "^13.11.0",
    "@types/source-map-support": "~0.5.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "~4.2.5",
    "lint-staged": "~10.1.3",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3",
    "ava": "~3.7.0",
    "nyc": "~15.0.1"
  },
  "dependencies": {
    "chalk": "~4.0.0",
    "source-map-support": "~0.5.16",
    "ts-node": "~8.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "ava": {
    "verbose": true,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "index.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
